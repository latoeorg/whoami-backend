// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ======================================
// TABLE USERS
// ======================================

enum enum_user_role {
  SUPERUSER
  USER
}

model tbm_user {
  id         String         @id @default(uuid())
  name       String
  email      String         @unique
  username   String         @unique
  password   String
  role       enum_user_role @default(USER)
  is_delete  Boolean        @default(false)
  updated_at DateTime       @default(now())
  created_at DateTime       @default(now())
}

// ======================================
// TABLE MASTER WALLET
// ======================================

model tbm_wallet_category_group {
  id         String   @id @default(uuid())
  name       String
  is_delete  Boolean  @default(false)
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
}

model tbm_wallet_category {
  id         String   @id @default(uuid())
  name       String
  image_path String
  is_delete  Boolean  @default(false)
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
  id_group   Int
}

// ======================================
// TABLE MASTER TRANSACTION
// ======================================

model tbm_transaction_category_group {
  id         String   @id @default(uuid())
  name       String
  is_delete  Boolean  @default(false)
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
}

model tbm_transaction_category {
  id         String   @id @default(uuid())
  name       String
  image_path String
  is_delete  Boolean  @default(false)
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
  id_group   Int
}

// ======================================
// MAIN TABLE
// ======================================

model tbl_wallet {
  id          String   @id @default(uuid())
  name        String
  balance     Float    @default(0)
  is_delete   Boolean  @default(false)
  updated_at  DateTime @default(now())
  created_at  DateTime @default(now())
  id_category Int
}

model tbl_transaction {
  id          String   @id @default(uuid())
  amount      Float
  note        String?
  date        DateTime
  image_path  String?
  id_category Int
  id_wallet   Int
  is_delete   Boolean  @default(false)
  updated_at  DateTime @default(now())
  created_at  DateTime @default(now())
}
